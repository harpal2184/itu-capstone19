<% layout('layout') -%>

<div class="row">
<div class="col-lg-4 col-lg-offset-4">
<% if (message.length > 0) { %>
  <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= message %>
  </div>
<% } %>
